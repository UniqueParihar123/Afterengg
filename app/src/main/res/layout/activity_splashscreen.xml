<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
 android:background="@drawable/homeback"
    tools:context="com.example.anupamparihar.afterengg.splashscreen">



    <TextView
        android:id="@+id/tv2"
        android:layout_width="wrap_content"
        android:layout_height="70dp"
        android:layout_above="@+id/pb"
        android:textColor="@color/btechbranchtext"
        android:textStyle="bold"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="36dp"
        android:gravity="center"

        android:background="@drawable/logedittext"
        android:text="       AFTER ENGG    "
        android:textSize="30sp"
        tools:layout_editor_absoluteX="77dp"
        tools:layout_editor_absoluteY="84dp" />





<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/im"
    android:background="@drawable/logedittext"
    android:src="@drawable/appicon"
    android:layout_marginTop="59dp"
    android:layout_alignParentTop="true"
    android:layout_centerHorizontal="true" />



    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/pb"
android:padding="20dp"
       android:layout_margin="10dp"

       style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="13dp" />
</RelativeLayout>
