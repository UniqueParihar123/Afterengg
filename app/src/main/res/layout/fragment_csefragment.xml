<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
android:background="@drawable/homeback"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.anupamparihar.afterengg.csefragment">

    <!-- TODO: Update blank fragment layout -->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/homeback">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="40sp"
            android:text="POPULAR CHOICES"
            android:textColor="@color/btechbranchtext"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/textView" />
        <android.support.v7.widget.CardView
            android:id="@+id/cv1"
            android:layout_width="110dp"
            android:layout_height="110dp"

            app:cardCornerRadius="20dp"
            android:layout_marginLeft="27dp"
            android:layout_marginStart="27dp"
            android:layout_marginTop="48dp"
            android:layout_below="@+id/textView"
            android:layout_alignLeft="@+id/textView"
            android:layout_alignStart="@+id/textView">
            <!-- aise hi kch value dedo abhi baad me image kie hisaab se denge-->
            <ImageView
                android:id="@+id/im1"
                android:layout_width="100dp"
                android:layout_height="94dp"
                android:layout_gravity="center"
                android:src="@drawable/gate" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv2"
            android:layout_width="110dp"
            android:layout_height="110dp"

            app:cardCornerRadius="20dp"
            android:layout_marginRight="25dp"
            android:layout_marginEnd="25dp"
            android:layout_alignTop="@+id/cv1"
            android:layout_alignRight="@+id/textView"
            android:layout_alignEnd="@+id/textView">
            <!-- aise hi kch value dedo abhi baad me image kie hisaab se denge-->
            <ImageView
                android:id="@+id/im2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/cat" />


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv3"
            android:layout_width="110dp"
            android:layout_height="110dp"

            app:cardCornerRadius="20dp"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp"
            android:layout_alignTop="@+id/cv4"
            android:layout_alignLeft="@+id/cv2"
            android:layout_alignStart="@+id/cv2">
            <!-- aise hi kch value dedo abhi baad me image kie hisaab se denge-->
            <ImageView
                android:id="@+id/im3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/upsc"
                android:layout_gravity="center"/>


        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/cv4"
            android:layout_width="110dp"
            android:layout_height="110dp"

            app:cardCornerRadius="20dp"
            android:background="@drawable/cardviewdesign"
            android:layout_marginTop="70dp"
            android:layout_below="@+id/cv1"
            android:layout_alignLeft="@+id/cv1"
            android:layout_alignStart="@+id/cv1"
            android:layout_marginLeft="11dp"
            android:layout_marginStart="11dp">
            <!-- aise hi kch value dedo abhi baad me image kie hisaab se denge-->
            <ImageView
                android:id="@+id/im4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center"
                android:src="@drawable/pvt" />
        </android.support.v7.widget.CardView>
    </RelativeLayout>
</RelativeLayout>
