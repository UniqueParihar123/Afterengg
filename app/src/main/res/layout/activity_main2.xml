<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
 android:background="@drawable/homeback"
    android:layout_height="match_parent"
    tools:context="com.example.anupamparihar.afterengg.Main2Activity">
    <Button
        android:layout_width="360dp"
        android:layout_height="50dp"
        android:id="@+id/bt1"
        android:textSize="30sp"
        android:text="Select File"
         android:background="@drawable/logedittext"
        android:textColor="@color/btechbranchtext"
        android:layout_marginTop="79dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/bt2"
        android:textSize="30sp"
        android:text="Upload File"
        android:background="@drawable/logedittext"
        android:textColor="@color/btechbranchtext"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="66dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textSize="20sp"
        android:textColor="@color/btechbranchtext"
android:background="@drawable/logedittext"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/tv"
        android:layout_marginTop="55dp"
        android:layout_below="@+id/bt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/bt3"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:text="Fetch File"
        android:textSize="30sp"
        android:background="@drawable/logedittext"
        android:textColor="@color/btechbranchtext"
        android:layout_below="@+id/bt1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="38dp" />
</RelativeLayout>
