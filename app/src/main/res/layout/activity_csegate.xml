<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/homeback"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    tools:context="com.example.anupamparihar.afterengg.csegate">

<TextView
    android:layout_width="360dp"
    android:layout_height="90dp"
    android:textColor="@color/btechbranchtext"
    android:textSize="25sp"

    android:text="       GET ALL INFO HERE !!"
    android:layout_above="@+id/cv1"
    android:layout_alignParentRight="true"
    android:layout_alignParentEnd="true"
    android:layout_marginBottom="48dp" />




<android.support.v7.widget.CardView
    android:layout_width="120dp"
    android:layout_height="120dp"
    app:cardCornerRadius="30dp"
    android:id="@+id/cv1"


    android:layout_above="@+id/cv2"
    android:layout_alignLeft="@+id/cv3"
    android:layout_alignStart="@+id/cv3"
    android:layout_marginBottom="14dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/im1"

      android:src="@drawable/syllabus"
        android:layout_gravity="center"
        />
</android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="30dp"

        android:id="@+id/cv2"
        android:layout_marginRight="52dp"
        android:layout_marginEnd="52dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="97dp">

        <ImageView
            android:id="@+id/im2"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/csegatetopics" />
    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="120dp"
        android:layout_height="120dp"
        app:cardCornerRadius="30dp"

        android:id="@+id/cv3"
        android:layout_marginLeft="42dp"
        android:layout_marginStart="42dp"
        android:layout_alignTop="@+id/cv2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">


        <ImageView
            android:id="@+id/im3"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@drawable/csegatecutoffs" />
    </android.support.v7.widget.CardView>

</RelativeLayout>
